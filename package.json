{
  "name": "node-express-ts",
  "version": "1.0.0",
  "description": "node + express + typescript template repository with basic config + tooling",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --project .",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:fix": "pretty-quick --pattern \"**/*.ts\" --staged",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "start": "nodemon",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "keywords": [
    "backend",
    "api",
    "node",
    "express",
    "typescript"
  ],
  "author": "Carlos Mart√≠nez Castillero <carlosmartcast@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charliemc/node-express-ts.git"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "helmet": "4.0.0",
    "http-status-codes": "1.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/express": "4.17.7",
    "@types/helmet": "0.0.47",
    "@types/jest": "26.0.9",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint": "7.6.0",
    "eslint-plugin-jest": "23.20.0",
    "husky": "4.2.5",
    "jest": "26.3.0",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "ts-jest": "26.2.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  }
}
